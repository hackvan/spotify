<div class="container">
  <div class="row">
    <h2><%= @artist.name %></h2>
    <%= image_tag @artist.image_url, alt: "Foto", :title => "Foto" unless @artist.image_url.blank? %>
    <br>
    <p>Albums (<%= @albums.size %>)</p>
    <% @albums.each do |album| %>
      <%= image_tag album.image_url, alt: "Foto", :title => "Foto" unless album.image_url.blank? %>
      <p><%= album.name %></p>
      <p><%= album.released_at %></p>
    <% end %>
  </div>
</div>
